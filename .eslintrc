{
  "extends": [
    "wesbos"
  ],
  "plugins": [
    "@emotion"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": false,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "import/no-unresolved": 0,
    "@emotion/jsx-import": "error",
    "@emotion/pkg-renaming": "error",
    "no-console": 2,
    "react/display-name": 0,
    "react/prop-types": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2
      }
    ]
  }
}